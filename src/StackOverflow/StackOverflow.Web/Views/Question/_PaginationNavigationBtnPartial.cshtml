@{
    int pageSize = ViewBag.PageSize;
    int pageNumber = ViewBag.PageNumber ?? 1;
    int totalPages = ViewBag.TotalPage;
    var sortOption = ViewBag.SortOption;
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="RetrieveAllQuestion" asp-route-pageNumber="@(pageNumber - 1)"
               asp-route-pageSize="@pageSize" asp-route-sortOption="@sortOption">Previous</a>
        </li>

        @for (var i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == pageNumber ? "active" : "")">
                <a class="page-link" asp-action="RetrieveAllQuestion" asp-route-pageNumber="@i" 
                   asp-route-pageSize="@pageSize" asp-route-sortOption="@sortOption">@i</a>
            </li>
        }

        <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
            <a class="page-link" asp-action="RetrieveAllQuestion" asp-route-pageNumber="@(pageNumber + 1)"
               asp-route-pageSize="@pageSize" asp-route-sortOption="@sortOption">Next</a>
        </li>
    </ul>
</nav>