@using StackOverflow.Infrastructure.Extensions

@if(TempData.Peek<ResponseModel>("CommentResponseMessage") != null)
{
    var response = TempData.Get<ResponseModel>("CommentResponseMessage");
    <div class="toast align-items-center text-black bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true" style="top: 60px;">
        <div class="d-flex">
            <div class="toast-body">
                @response?.Message
            </div>
        </div>
    </div>
}
