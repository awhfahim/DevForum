@section Styles {
    <link href="~/css/user.css" rel="stylesheet" />
}
<div class="container">
    <div class="row">
        <div class="col-2 border-info text-capitalize">
             <a class="nav-link text-dark" href="#">Profile</a>
        </div>
        <div class="col-2 border-info text-capitalize">
            <a class="nav-link text-dark" href="#">Questions</a>
        </div>
        <div class="col-2 border-info text-capitalize">
            <a class="nav-link text-dark" href="#">Saves</a>
        </div>
        <div class="col-1 border-info text-capitalize">
            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
        </div>
    </div>
    
    <div id="content">
        <!-- The content of the "Activity" page will be loaded here -->
    </div>
    
</div>

@section Scripts
{
    <script>
        $(document).ready(function() {
            $('.container .col-2 a').click(function(e) {
                e.preventDefault();
                $('.container .col-2 a').removeClass('active');
                $(this).addClass('active');
                if ($(this).text() === 'Questions') {
                    $('#content').load('User/Questions/');
                }
            });
        }) ;
    </script>

